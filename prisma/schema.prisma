type QuotationDeposit {
    firstDeposit Float
    finalDeposit Float
}

type ReceiptDepositEmbed {
    id              String
    vat7            Float
    taxType         TaxType   @default(NOTAX)
    taxValue        Float
    dateOffer       DateTime?
    docNumber       String
    FCMToken        String?
