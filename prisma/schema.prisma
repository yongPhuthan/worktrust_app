    paymentMethod   String?
    noteToCustomer  String?
    noteToTeam      String?
    pdfUrl          String?
    created         DateTime? @default(now())
    updated         DateTime? @default(now())
}

type FinalInvoiceEmbed {
    id              String
    vat7            Float
    taxType         TaxType   @default(NOTAX)
    taxValue        Float
    dateOffer       DateTime?
    docNumber       String
    FCMToken        String?
    sellerSignature String?
    status          String?
    netAmount       Float?
    remaining       Float?
