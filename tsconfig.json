{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@env": ["./node_modules/react-native-dotenv"]
    },
    "types": ["jest"],
    "jsx": "react-native",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "compileOnSave": true,
  "include": [
    "src",
    "App.tsx",
    "types",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.ts",
    "firebase.ts",
    "screens",
    "components",
    "hooks",
    "navigations",
    "providers"
, "types/index.ts"  ]
}
